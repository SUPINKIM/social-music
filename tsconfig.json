{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@screens/*": ["./src/screens/*"],
            "@hooks/*": ["./src/hooks/*"]
        },
        "jsx": "react-native"
    },
    "include": ["./src/**/*.tsx", "./App.tsx"],
    "exclude": ["node_modules"]
}
